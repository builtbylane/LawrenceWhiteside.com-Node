body.site
  overflow-x: hidden
#theme-video
  @extend .theme-size
  z-index: 2
  .wrapper
    position: absolute
    width: 100%
    height: 100%
    z-index: 100
    background-color: #FFF
  .screen
    position: relative
    height: 100% 
    width: 100%
    float: left
    overflow: hidden
  .big-image
    min-width: 100%
    min-height: 100% 
    height: auto
    width: auto
  .video-title
    position: absolute
    bottom: 5%
    left: 5%
    opacity: .5
    margin: 0
    padding: 0
    line-height: .65
    font-size: 4em
    text-transform: uppercase
  nav
    position: absolute 
    right: 5% 
    top: 45% 
    padding: 20px 
    background: #000 
    border-radius: 40px 
    opacity: .4 
    cursor: pointer
    &:hover
      opacity: .6
.next-icon
  -moz-user-select: none 
  -khtml-user-select: none 
  -webkit-user-select: none 
  -o-user-select: none 
  display: block
  line-height: 50px
  width: 120px
  text-align: center
  background-color: rgba(0,0,0,0.7)
  border-radius: 100em
  position: fixed
  left: 50%
  margin-left: -60px
  font-size: 3em
  bottom: -100px
  color: #fff
  cursor: pointer
  text-decoration: none
  z-index: 3
