.spotlight-gradient
  background: -moz-radial-gradient(center, ellipse cover,  rgba(255,255,255,0.25) 9%, rgba(0,0,0,0.6) 85%, rgba(0,0,0,0.67) 100%) /* FF3.6+ */
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(9%,rgba(255,255,255,0.25)), color-stop(85%,rgba(0,0,0,0.6)), color-stop(100%,rgba(0,0,0,0.67))) /* Chrome,Safari4+ */
  background: -webkit-radial-gradient(center, ellipse cover,  rgba(255,255,255,0.25) 9%,rgba(0,0,0,0.6) 85%,rgba(0,0,0,0.67) 100%) /* Chrome10+,Safari5.1+ */
  background: -o-radial-gradient(center, ellipse cover,  rgba(255,255,255,0.25) 9%,rgba(0,0,0,0.6) 85%,rgba(0,0,0,0.67) 100%) /* Opera 12+ */
  background: -ms-radial-gradient(center, ellipse cover,  rgba(255,255,255,0.25) 9%,rgba(0,0,0,0.6) 85%,rgba(0,0,0,0.67) 100%) /* IE10+ */
