// Colors
$green = #51c61e
$green1 = #67ff22
$green2 = #2c923a
$green3 = #2c923a

.hexagon
  top: 50%
  margin: -100px 0 0 -100px
  left: 50%
  position: absolute
  color: white
  z-index: 1
  width: 200px
  height: 200px
  font-family: 'Krungthep'
  a
    text-decoration: none
  .hexagon-svg
    width: 200px
    position: absolute
    top: 0
    left: 0
    z-index: 2
    polygon
      fill: rgba(0,0,0,0.7)
      stroke: #000000
      stroke-width:0px
  .web-label
    z-index: 3
    position: absolute
    color: #aaa
    line-height: 60px
    width: 100%
    text-align: center
    top: 124px
    font-size: 23px
  .film-label
    top: 15px
    z-index: 3
    position: absolute
    color: #aaa
    width: 100%
    text-align: center
    line-height: 60px
    font-size: 23px
.header
  height: 50px    
  width: 100%
  left: 0    
  top: 50%
  margin-top: -25px
  position: absolute
  color: white
  background-color: black
  z-index: 3
  .full-name
    -webkit-font-smoothing: antialiased
    //opacity: 0
    line-height: 50px
    position: absolute
    text-align: center
    width: 100%
    font-family: 'Krungthep'
    font-size: 1.3em
    z-index: 2
.initials
  background-color: transparent
  font-family: 'Krungthep', 'Bank Gothic'
  font-size: 150px
  color: white
  line-height: 300px
  text-align: center
  width: 300px
  border-radius: 0
  overflow: hidden
  span
    display: inline-block
  span.name
    width: 0
    overflow: hidden
  span.nameL
    width: 90px
  span.nameW
    width: 150px
@media only screen and (max-width: 64.063em)
  .initials
    //
.contact
  position: absolute
  width: 140px
  height: 50px
  right: 0
  bottom: 0
  opacity: 0
  left: auto
  color: #ccc
  cursor: pointer
  z-index: 2
  width: 50px
  line-height: 50px
  &:hover
    color: $green
  .reachOut
    display: none 
    font-size: .5em
  @media only screen and (min-width: 40.063em)
    .reachOut
      display: block
