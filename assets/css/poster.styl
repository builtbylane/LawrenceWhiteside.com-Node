.main-overlay
  position: absolute
  height: 100%
  width: 100%
  cursor: pointer
  z-index: 4
  display: none    
.main-stage
  position: relative
  top: 0
  width: 100%
  z-index: 3
  .stage-width
    top: 0
    position: relative
    height: inherit
    margin: 0 auto
    z-index: 1
    //background-color: rgba(255,255,255,0.2)
    @media only screen and (max-width: 40.063em)
      min-width: 100% !important
.name
  background-color: rgba(0,0,0,0.6)
  color: white
  font-size: 30px
  text-align: right
  position: fixed
  line-height: 50px
  text-align: center
  width: 100%
  -webkit-transform: translateY(-50px)
  -webkit-transition: all 400ms
  -moz-transform: translateY(-50px)
  -moz-transition: all 400ms
  z-index: 1
  font-family: 'Krungthep', 'Bank Gothic'
.scrollPos
  color: white
  position: fixed
  top: 0
  right: 0
  width: 100px
  z-index: 1
.nameIn
  -webkit-transform: translateY(0px)
  -moz-transform: translateY(0px)
#intro
  display: block
  width: 100%
  position: relative
  margin-top: 30%
  left: 0
  height: 400px
  font-family: 'Krungthep', 'Bank Gothic'
  *
    @extend .threeD
.initials
  position: relative
  color: #ddd
  text-align: center
  font-size: 50px
  margin: 0 auto
  opacity: 0
.position
  color: #666
  opacity: 1
  position: absolute
  width: 200px
  z-index: 2
  top: -10px
  font-size: 2em
.position1
  left: 50%
.position2
  right: 51%
  text-align: right
#introBubble
  color: white
  position: relative
  margin: 860px 0 660px 0
  pointer-events: none
  .introBubble2
    position: relative
    background-color: rgba(0,0,0,0.8)
    padding: 55px
    border-radius: 1000em
    width: 300px
    height: 300px
    margin: 0 auto
  h1
    font-size: 1.4em
    border-bottom: 1px solid red
    font-family: 'Krungthep', 'Bank Gothic'
    padding-bottom: 10px
    margin-bottom: 5px
    text-align: center
  p
    font-size: 0.9em
    line-height: 2em
    margin: 5px 0
    text-align: justify
    font-family: 'Helvetica'

.poster
  position: relative
  opacity: 1
  width: 100%
  margin-bottom: 200px
  -webkit-transform-style: preserve-3d   // Important for perspective renders, avoids the flicker
  transform-style: preserve-3d   // Important for perspective renders, avoids the flicker
  pointer-events: none
  .poster2
    position: relative
    margin: 0 auto
    max-width: 800px
    -webkit-transform-style: preserve-3d   // Important for perspective renders, avoids the flicker
    transform-style: preserve-3d   // Important for perspective renders, avoids the flicker
    pointer-events: none
    -webkit-perspective: 500px
    -moz-perspective: 500px
    -o-perspective: 500px
    -ms-perspective: 500px
    z-index: 2
    img
      width: 100%
.caption
  position: absolute
  opacity: 0
  background-color: rgba(0,0,0,0.7);
  padding: 20px
  width: 40%
  right: 42%
  top: 70px
  color: white
  font-size: 1.2em
  line-height: 2em
  z-index: 1
