body.web
  overflow: hidden
  .brands
    position: absolute
    left: 410px
    right: 80px
    overflow: hidden
    height: 90px
    .logo
      position: relative
      margin-top: 10px
      border-radius: 100%
      border: 5px #787878 solid
      opacity: 0
      width: 80px
      float: left
    .csf-logo
      margin-left: 0px
    .fantrotter-logo
    .spins-logo
    .fads-logo
      margin-left: 5px
  .contentContainer
    height: 100%
  .style
    position: fixed
    top: 0
    bottom: 0
    left: 0
    rigth: 0
  .style.film
    background-color: rgba(0,0,0,0.5)
  .style.web
    background-color: rgba(255,255,255,0.2)
  .scrollContainer
    position: absolute
    top: 50px
    z-index: 0
    bottom: 0
    top: 50px
    width: 100%
    overflow-y: auto
    .scrollContent
      position: absolute
      height: 1000%
      width: 100%
  section
    width: 100%
    height: 100%
    display: none
    position: relative
  .door
    cursor: pointer
    position: relative
  .doorH
    height: 50%
    width: 100%
    position: absolute
    left: 0
  .knob
    position: absolute
    top: 50%
    left: 50%
    margin: -100px 0 0 -100px
    width: 200px
    height: 200px
    background-color: black
    border-radius: 100%
  section.front
    display: block
    opacity: 1
    z-index: 1
    position: fixed
    bottom: auto
    top: 0
    .topDoor
      top: 0
      background-color: rgba(0,0,0,0.5)
      .label
        position: absolute
        color: white
        bottom: 0
        padding: 10px
        right: 50%
        margin-right: 100px
    .bottomDoor
      bottom: 0
      background-color: rgba(255,255,255,0.2)
      .label
        position: absolute
        left: 50%
        margin-left: 100px
        top: 0
        padding: 10px
        color: black
    @media only screen and (max-width: 40.063em)
      .topDoor
        .label
          width: 100%
          bottom: 120px
          right: auto
          text-align: center
          margin-right: 0
      .bottomDoor
        .label
          width: 100%
          top: 120px
          left: auto
          text-align: center
          margin-left: 0
    .initials
      @extend body.web .knob
      background-color: transparent
      font-family: 'Krungthep', 'Bank Gothic'
      font-size: 100px
      color: white
      line-height: 200px
      text-align: center
      width: 200px
      border-radius: 0
      overflow: hidden
      span
        display: inline-block
      span.name
        width: 0
        overflow: hidden
      span.nameL
        width: 60px
      span.nameW
        width: 100px
    @media only screen and (max-width: 40.063em)
      .initials
        font-size: 60%
  .contact
    position: absolute
    width: 150px
    height: 50px
    right: 70%
    opacity: 0
    left: auto
    color: #ccc
    cursor: pointer
    &:hover
      color: red
    i
      transform: rotateZ(45deg)
      -webkit-transform: rotateZ(45deg)
      width: 50px
      font-size: 36px
      line-height: 50px
      text-align: center
      float: right
    .reachOut
      right: 50px
      position: absolute
      line-height: 50px
      font-size: 15px
      opacity: 0
  section.film
    z-index: 2
  section.web
    z-index: 1
    display: block
  .page
    position: absolute
    width: inherit
    top: 50px
    padding: 0 90px 0px 90px
    display: none
    .row
      max-width: 1090px
    img
      width: 100%
    .imac
      position: relative
      width: 100%
      margin: 40px auto 90px auto
      opacity: 0
    .iphone
      position: relative
      left: 50%
      margin: -80px 0 0 -60px
      width: 120px
      transform: rotateZ(-90deg)
      -webkit-transform: rotateZ(-90deg)
      opacity: 0
    .screen
      position: absolute
      left: 3%
      right: 3%
      top: 4%
      bottom: 26.7%
      overflow: hidden
      img
        opacity: 0
        position: absolute
        top: -1px
      :first-child
        opacity: 1
    .cards
      position: fixed
      width: 100%
      left: 0
      height: 0%
      bottom: 0
      background-color: #FFF
      -webkit-transition: height 1s
      transition: height 1s
      .infoBox
        background-color: #FFF
        padding: 20px
        margin: 10px auto
        opacity: 0
        position: absolute
        width: 50%
        margin-top: 30px
        p
          color: black
          font-size: 1em
          line-height: 1.2em
        .icon
          i
            color: orange
      &:first-child
        display: block
    .openCards
      height: 30%
    @media only screen and (min-width: 64.063em)
      .cards
        position: relative
        width: auto
        background-color: transparent
        .infoBox
          background-color: #FFF
          color: black
          padding: 20px
          margin: 10px auto
          width: 100%
          opacity: 0
          position: absolute
          border-radius: 2px
          box-shadow: 1px 0 2px rgba(0,0,0,0.4)
          font-size: 1em
          line-height: 1.2em
        &:first-child
          display: block
  @media only screen and (max-width: 40.063em)
    .page
      padding: 10px
      top: 0
      .iphone
        margin-top: -140px
  section.fixed
    position: fixed
    pointer-events: none
    .page
      position: fixed
      pointer-events: none

.modal
  background-color: white

.actionButton
  font-size: 1em
  border-radius: 6px
  box-shadow: 0px 2px 6px rgba(000,000,000,0.3), inset 0px 0px 3px rgba(255,255,255,1)
  text-align: center
  display: block
  cursor: pointer
  border-width: 1px 
  border-type: solid 
  margin: 0 auto
  color: black
  padding: 10px 10px
