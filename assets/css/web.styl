// Colors
$green = #51c61e
$green1 = #67ff22
$green2 = #2c923a
$green3 = #2c923a

.actionButton
  font-size: 120%
  line-height: 25px
  font-family: 'Krungthep'
  border-radius: 6px
  box-shadow: 1px 2px 4px rgba(0,0,0,0.2), inset 0px 0px 3px rgba(255,255,255,1)
  text-align: center
  display: block
  letter-spacing: 1px
  cursor: pointer
  border-width: 1px !important 
  border-type: solid 
  margin: 0 auto
  color: white
  padding: 20px
  outline: none
  align-items: flex-start
  -webkit-writing-mode: horizontal-tb
  &:active
    box-shadow: 0px 0px 0px rgba(0,0,0,0.2), inset 0px 0px 3px rgba(255,255,255,1)
    margin-top: 3px
    margin-bottom: -3px
.greenButton
  @extend .actionButton
  background: -moz-linear-gradient(top, $green1 0%, $green2)
  background: -webkit-gradient(linear, left top, left bottom, from($green1), to($green2))
  border-color: $green1
  text-shadow: -1px -1px 2px $green3, 0px 2px 7px $green1

body.web, body.supl
  overflow: hidden
  font-family: 'Lato', Helvetica
  .circle
    position: absolute
    top: 50%
    left: 50%
    margin: -175px 0 0 -150px
    background-color: black
    border-radius: 100%
  .introCircle
    padding: 0 40px
    width: 300px
    height: 300px
    display: table
    .introCircle2    
      display: table-cell
      vertical-align: middle
    h1
      text-align: center
  .contentContainer
    top: 0
    bottom: 0
    left: 0
    right: 0
    position: fixed
    z-index: 1
    overflow: hidden
    box-shadow: 5px 5px 10px rgba(0,0,0,0.5)
  .style
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    z-index: 1
    opacity: 0
  .style.film
    background-color: rgba(0,0,0,0.85)
  .style.web
    background-color: rgba(255,255,255,0.2)
  .style.supl
    background-color: rgba(0,0,0,0.5)
  .scroll
    width: 100%
    top: 0px
    bottom: 0
    position: absolute
    .scrollContent
      position: absolute
      width: 100%
      top: 0
      background-repeat: repeat
  .half
    width: 100%
    height: 100%
    display: none
    position: absolute
    overflow: hidden
  .door
    cursor: pointer
    position: relative
  .doorH
    height: 50%
    width: 100%
    position: absolute
    left: 0
  .rotation
    position: absolute
    background-color: black
    border-radius: 100%
    width: 300px
    height: 300px    
    -webkit-transform-style: preserve-3d
    transform-style: preserve-3d
    .heads, .tails
      width: 300px
      height: 300px
      position: absolute
      top: 0
      left: 0
      backface-visibility: hidden
      -webkit-backface-visibility: hidden
    .heads
      z-index: 2
    .tails
      -webkit-perspective: 1000
      transform: rotateY(-180deg)
      -webkit-transform: rotateY(-180deg)

  .hexagon
    top: 50%
    margin: -100px 0 0 -100px
    left: 50%
    position: absolute
    color: white
    z-index: 1
    width: 200px
    height: 200px
    font-family: 'Krungthep'
    .hexagon-svg
      width: 200px
      position: absolute
      top: 0
      left: 0
      z-index: 2
      polygon
        fill: rgba(0,0,0,0.7)
        stroke: #000000
        stroke-width:0px
    .web-label
      z-index: 3
      position: absolute
      color: #aaa
      line-height: 60px
      width: 100%
      text-align: center
      top: 124px
      font-size: 23px
    .film-label
      top: 15px
      z-index: 3
      position: absolute
      color: #aaa
      width: 100%
      text-align: center
      line-height: 60px
      font-size: 23px
  .header
    height: 50px    
    top: 50%
    margin-top: -25px
    width: 100%
    left: 0
    position: fixed
    color: white
    background-color: black
    z-index: 3
    .full-name
      -webkit-font-smoothing: antialiased
      //opacity: 0
      line-height: 50px
      position: absolute
      text-align: center
      width: 100%
      font-family: 'Krungthep'
      font-size: 1.3em
      z-index: 2
  .front
    display: block
    opacity: 1
    z-index: 3
    position: fixed
    bottom: auto
    top: 0
    width: 100%
    height: 100%
    .caption
      font-family: 'Krungthep'
      font-size: 1em
      color: white
      position: absolute
      line-height: 30px
      top: 50%
      line-height: 30px
      top: 50%
      margin-top: -15px
      width: 100%
      z-index: 2
      text-align: center
    .frame
      display: block
      float: left
      color: white
      text-decoration: none
      position: relative
      background-size: cover
      margin: 0
      box-shadow: inner 0 0 40px black
      overflow: hidden
      span.label
        bottom: 0
        display: inline-block
        padding: 0 10px
        color: white
    .web-header-scroll
      left: 0
      top: 25px
      .frame
        //
        img
          //
    .film-header-scroll
      bottom: 25px
    .header-scroll
      position: absolute
      .frame
        opacity: 0
        height: 100%
        width: 100vw
        max-width: 640px
        text-decoration: none
        img
          position: absolute
          opacity: 0.7
          left: 50%
      .scrollContent
        height: 100%
    .topDoor
      top: 0
      position: relative
      background-color: rgba(0,0,0,0.5)
    .bottomDoor
      bottom: 0
      background-color: rgba(255,255,255,0.2)
  .initials
    background-color: transparent
    font-family: 'Krungthep', 'Bank Gothic'
    font-size: 150px
    color: white
    line-height: 300px
    text-align: center
    width: 300px
    border-radius: 0
    overflow: hidden
    span
      display: inline-block
    span.name
      width: 0
      overflow: hidden
    span.nameL
      width: 90px
    span.nameW
      width: 150px
  @media only screen and (max-width: 64.063em)
    .initials
      //
  .contact
    position: absolute
    width: 140px
    height: 50px
    right: 0
    bottom: 0
    opacity: 0
    left: auto
    color: #ccc
    cursor: pointer
    z-index: 2
    width: 50px
    font-size: 36px
    line-height: 50px
    &:hover
      color: $green
    .reachOut
      display: none  
  @media only screen and (min-width: 40.063em)
    .contact
      display: block
      i
        transform: rotateZ(45deg)
        -webkit-transform: rotateZ(45deg)
