        font-size: 36px
        line-height: 50px
        text-align: center
        float: right
      .reachOut
        right: 50px
        position: absolute
        line-height: 50px
        font-size: 100%
        opacity: 1
  .section
    position: relative
    width: 100%
    margin-top: 50px
    display: none
  .page
    position: relative
    padding: 30px 90px 0px 90px
    top: 0
    left: 0
    min-height: 540px
  .row
    max-width: 1300px
  img
    width: 100%
  .theater
    position: relative
    opacity: 1
    width: 100%
    margin: 40px auto 90px auto
    .screen
      position: relative
      margin: 50px auto
      max-width: 900px
      video
        bottom: 0
        top: 0
      img
        position: relative
    .infoBox
      background: transparent
      color: white
      box-shadow: none
    .playButton
      width: 100px
      height: 100px
      position: absolute
      z-index: 3
      top: 50%
      left: 50%
      display: table
      margin: -15% 0 0 -15%
      border-radius: 100%
      cursor: pointer
      i
        display: table-cell
        vertical-align: middle
        color: white
        font-size: 3em
        text-align: center
      i.pause
        
      &:hover
        background-color: rgba(0,0,0,0.4)
        i
          color: $green
  .imac
    position: relative
    width: 100%
    margin: 40px auto 90px auto
    opacity: 1
    .screen
      position: absolute
      left: 4%
      right: 4%
      top: 4.7%
      bottom: 26.7%
      overflow: hidden
      img
        opacity: 0
        position: absolute
        top: -1px
      :first-child
        opacity: 1
  .iphone
