body.web
  overflow: hidden
  .brands
    position: absolute
    left: 410px
    overflow: hidden
    height: 90px
    right: 0
    .logo
      position: relative
      margin-top: 10px
      border-radius: 100%
      border: 5px #787878 solid
      opacity: 0
      width: 80px
      margin-left: 5px
      float: left
    .csf-logo
      margin-left: 0px
  @media only screen and (min-width: 40.063em)
    .brands
      right: 80px
  .contentContainer
    top: 0
    bottom: 0
    left: 0
    right: 0
    position: fixed
    z-index: 1
    overflow: hidden
  .style
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
  .style.film
    background-color: rgba(0,0,0,0.5)
  .style.web
    background-color: rgba(255,255,255,0.2)
  .scrollContainer
    position: relative
    z-index: 0
    margin-top: 50px
    bottom: 0
    overflow-y: auto
    .scrollContent
      position: absolute
  .half
    width: 100%
    height: 100%
    display: none
    position: relative
  .door
    cursor: pointer
    position: relative
  .doorH
    height: 50%
    width: 100%
    position: absolute
    left: 0
  .knob
    position: absolute
    top: 50%
    left: 50%
    margin: -100px 0 0 -100px
    width: 200px
    height: 200px
    background-color: black
    border-radius: 100%
  .front
    display: block
    opacity: 1
    z-index: 1
    position: fixed
    bottom: auto
    top: 0
    width: 100%
    height: 100%
    .topDoor
      top: 0
      background-color: rgba(0,0,0,0.5)
      .label
        position: absolute
        color: white
        bottom: 0
        padding: 10px
        right: 50%
        margin-right: 100px
    .bottomDoor
      bottom: 0
      background-color: rgba(255,255,255,0.2)
      .label
        position: absolute
        left: 50%
        margin-left: 100px
        top: 0
        padding: 10px
        color: black
    @media only screen and (max-width: 64.063em)
      .topDoor
        .label
          width: 100%
          bottom: 120px
          right: auto
          text-align: center
          margin-right: 0
      .bottomDoor
        .label
          width: 100%
          top: 120px
          left: auto
          text-align: center
          margin-left: 0
    .initials
      @extend body.web .knob
      background-color: transparent
      font-family: 'Krungthep', 'Bank Gothic'
      font-size: 100px
      color: white
      line-height: 200px
      text-align: center
      width: 200px
      border-radius: 0
      overflow: hidden
      span
        display: inline-block
      span.name
        width: 0
        overflow: hidden
      span.nameL
        width: 60px
      span.nameW
        width: 100px
    @media only screen and (max-width: 64.063em)
      .initials
        //
  .contact
    position: absolute
    width: 150px
    height: 50px
    right: 70%
    opacity: 0
    left: auto
    color: #ccc
    cursor: pointer
    display: none
    &:hover
      color: red
  @media only screen and (min-width: 40.063em)
    .contact
      display: block
      i
        transform: rotateZ(45deg)
        -webkit-transform: rotateZ(45deg)
        width: 50px
        font-size: 36px
        line-height: 50px
        text-align: center
        float: right
      .reachOut
        right: 50px
        position: absolute
        line-height: 50px
        font-size: 15px
        opacity: 0
  .film
    z-index: 2
  .web
    z-index: 1
    display: block
  .section
    position: relative
    width: 100%
    padding: 0px 90px 0px 90px
    margin-top: 50px
    display: none
    .page
      position: relative
      top: 0
      left: 0
    .row
      max-width: 1090px
    img
      width: 100%
    .poster
      position: relative
      width: 100%
      margin: 40px auto 90px auto
      opacity: 1
      .screen
        position: relative
        img
          position: relative
    .imac
      position: relative
      width: 100%
      margin: 40px auto 90px auto
      opacity: 1
    .iphone
      position: relative
      left: 50%
      margin: -80px 0 0 -60px
      width: 120px
      transform: rotateZ(-90deg)
      -webkit-transform: rotateZ(-90deg)
      opacity: 1
    .screen
      position: absolute
      left: 3%
      right: 3%
      top: 4%
      bottom: 26.7%
      overflow: hidden
      img
        opacity: 0
        position: absolute
        top: -1px
      :first-child
        opacity: 1
    .cards
      position: relative
      width: auto
      background-color: transparent
      .infoBox
        background-color: #FFF
        color: #444
        padding: 10px 20px
        margin: 150px auto 0 auto
        width: 80%
        opacity: 1
        position: relative
        border-radius: 2px
        box-shadow: 1px 0 2px rgba(0,0,0,0.4)
        font-size: 1em
        line-height: 1.8em
      &:first-child
        display: block
  @media only screen and (max-width: 64.063em)
    .section
      padding: 100px 10px 10px 10px
      margin-top: 0
      .imac
        margin: 0 auto 40px auto
      .iphone
        margin-top: -140px
      .cards
        .infoBox
          margin-top: 0
  section.fixed
    position: fixed
    pointer-events: none
    .page
      position: fixed
      pointer-events: none

.modal
  background-color: white

.actionButton
  font-size: 1em
  border-radius: 6px
  box-shadow: 0px 2px 6px rgba(000,000,000,0.3), inset 0px 0px 3px rgba(255,255,255,1)
  text-align: center
  display: block
  cursor: pointer
  border-width: 1px 
  border-type: solid 
  margin: 0 auto
  color: black
  padding: 10px 10px
