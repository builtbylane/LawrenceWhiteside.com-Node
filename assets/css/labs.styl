//= require foundation
body.labs
  background: white
.slide
  position: relative
  width: 100%
  z-index: 0
  img
    position: relative
    // left: 50%
    z-index: 0
.content
  position: absolute
  display: block
  z-index: 1
  pre
    padding: 10px
    background-color: rgba(255,255,255,0.7)
input.ng-pristine
  background-color: white
input.ng-dirty
  background-color: yellow
input.ng-valid
  background-color: white
input.ng-invalid
  background-color: pink
#app
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
